        <timeOfDay className="org.apache.plc4x.java.canopen.readwrite.TimeOfDay">
          <millis>-392494841</millis>
          <days>13392</days>
        </timeOfDay>
      </CANOpenTimeSynchronization>
    </xml>
  </testcase>

