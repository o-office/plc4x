    <xml>
      <CANOpenNetworkPayload className="org.apache.plc4x.java.canopen.readwrite.CANOpenNetworkPayload">
        <state>BOOTED_UP</state>
      </CANOpenNetworkPayload>
    </xml>
  </testcase>

